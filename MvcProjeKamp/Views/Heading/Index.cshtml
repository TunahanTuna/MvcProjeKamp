@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Başlıklar</h2>

<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Kategori</th>
    </tr>
    @foreach (var i in Model)
    {
    <tr>
        <td>@i.HeadingID</td>
        <td>@i.HeadingName</td>
        <td>@i.Category.CategoryName</td>
    </tr>
    }

</table>
